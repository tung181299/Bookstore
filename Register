    private void createButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String addCustomer = "INSERT INTO Customers VALUES ('"+firstNameField.getText()+"', '"+lastNameField.getText()+"', '"+addressField.getText()+"', "+phoneField.getText()+", '"+emailField.getText()+"');";
        try {
            Class.forName( JDBC_DRIVER);
            Connection connection = DriverManager.getConnection( DATABASE_URL );
            Statement stmt = connection.createStatement();
            stmt.executeQuery(addCustomer);            
        }
        catch (Exception e){
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        register();
        close();
    } 
    
    private void register(){
        try{
            String getNewestID = "SELECT * FROM Customers WHERE customerID = (SELECT MAX(c.customerID) FROM Customers c);";
            Class.forName( JDBC_DRIVER);
            Connection connection = DriverManager.getConnection( DATABASE_URL );
            Statement stmt2 = connection.createStatement();
            ResultSet rs = stmt2.executeQuery(getNewestID);            
            while(rs.next()){
                id = rs.getInt("customerID");
                String addAccount = "INSERT INTO Account (username, password, customerID) VALUES('"+usernameField.getText()+"', '"+passwordField.getText()+"', "+id+");";
                stmt2.executeQuery(addAccount);
            }
        }
        catch (Exception e1){
            JOptionPane.showMessageDialog(this, e1.getMessage());
        }
    }
    
    public void close(){
        WindowEvent panelClosingEvent = new WindowEvent(this, WindowEvent.WINDOW_CLOSING);
        Toolkit.getDefaultToolkit().getSystemEventQueue().postEvent(panelClosingEvent);
    }
    
